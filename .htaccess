<IfModule mod_rewrite.c>
  RewriteEngine On

  # Serve static assets from /public
  RewriteCond %{REQUEST_URI} ^/(build|images|storage|favicon\.ico|robots\.txt) [NC]
  RewriteRule ^ public%{REQUEST_URI} [L]

  # If the requested file or directory exists at the root, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, send requests to Laravel front controller in /public
  RewriteRule ^ public/index.php [L]
</IfModule>
